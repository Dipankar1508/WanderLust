<% layout("/layouts/boilerplate") %>
    <div class="row">
        <h3 class="col-6 offset-3">Signup On WanderLust</h3>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" placeholder="Enter the username" class="form-control"
                        id="username" required>
                    <div class="valid-feedback">Awesome username</div>
                    <div class="invalid-feedback">username needed</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" name="email" placeholder="Enter the email" class="form-control" id="email"
                        required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" placeholder="Enter the password" class="form-control"
                        id="password" required>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>

    </div>