<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <h1>Edit Listing</h1>
        <form method="post" action="/listing/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
          enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label">Title </label>
            <input type="text" name="listing[title]" placeholder="Enter the title" value="<%= listing.title %>"
              class="form-control" required>
            <div class="valid-feedback">Awesome title</div>
            <div class="invalid-feedback">Title needed</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description </label>
            <textarea name="listing[description]" placeholder="Enter the description" class="form-control"
              required><%= listing.description %></textarea>
            <div class="invalid-feedback">Few description needed</div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Listing Image Preview</label>
            <br>
            <img src="<%= originalImageUrl %>" style="width: 15rem;">
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="file" name="listing[image]" class="form-control">
            <div class="valid-feedback">Beautiful Image</div>
            <div class="invalid-feedback">Image is required</div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price</label>
              <input type="number" name="listing[price]" placeholder="Amount" value="<%= listing.price %>"
                class="form-control" required>
              <div class="invalid-feedback">Enter a valid price</div>

            </div>
            <div class="mb-3 col-md-8">
              <label for="location" class="form-label">Location</label>
              <input type="text" name="listing[location]" placeholder="Where is it located"
                value="<%= listing.location %>" class="form-control" required>
              <div class="invalid-feedback">Enter the current location</div>

            </div>
          </div>

          <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" placeholder="Country" value="<%= listing.country %>"
              class="form-control" required>
            <div class="invalid-feedback">Enter the country name</div>

          </div>

          <button type="submit" class="btn btn-dark btn-color mt-3">Save Changes</button>
        </form>
        <br>
        <br>
      </div>
    </div>
  </body>