<% layout("/layouts/boilerplate") %>

  <!-- Filter Buttons (Clicking filters will send a title as a query parameter) -->
  <div id="filters" class="mt-3">
    <a href="/listing?title=Trending" class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>
    <a href="/listing?title=Rooms" class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>
    <a href="/listing?title=Iconic Cities" class="filter">
      <div><i class="fa-solid fa-city"></i></div>
      <p>Iconic Cities</p>
    </a>
    <a href="/listing?title=Mountain" class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountain</p>
    </a>
    <a href="/listing?title=Castles" class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </a>
    <a href="/listing?title=Amazing Pools" class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>
    <a href="/listing?title=Beach" class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </a>
    <a href="/listing?title=Camping" class="filter">
      <div><i class="fa-solid fa-tent"></i></div>
      <p>Camping</p>
    </a>
    <a href="/listing" class="btn btn-outline-secondary mx-2 clear">Clear Filters</a>
    <div class="tax_switch">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>

  <!-- Listing Cards -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
    <% if (listing.length===0) { %>
      <div class="col text-center mt-4">
        <h3>No results found</h3>
        <p>Try searching for something else.</p>
      </div>
      <% } else { %>
        <% for (let list of listing) { %>
          <a href="/listing/<%= list._id %>" style="text-decoration: none;">
            <div class="card listing-card col">
              <img src="<%= list.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
              <div class="card-body">
                <p class="card-text">
                  <b>
                    <%= list.title %>
                  </b><br>
                  Location: <%= list.location %> <br>
                    &#8377 <%= list.price.toLocaleString("en-IN") %>/night
                      <i class="tax_info">&nbsp; &nbsp; + 18% GST</i>
                </p>
              </div>
            </div>
          </a>
          <% } %>
            <% } %>
  </div>

  <!-- Script for GST Toggle -->
  <script>
    let taxSwitch = document.getElementById('flexSwitchCheckDefault');
    if (taxSwitch) {
      taxSwitch.addEventListener("click", () => {
        let tax_info = document.getElementsByClassName("tax_info");
        for (let One of tax_info) {
          if (One.style.display !== "inline") {
            One.style.display = "inline";
          } else {
            One.style.display = "none";
          }
        }
      });
    }
  </script>